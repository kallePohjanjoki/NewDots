// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "show_edit_predictions": false,
  "icon_theme": "Colored Zed Icons Theme Dark",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#16161700",
    "panel.background": "#00000000",
    "editor.background": "#16161600",
    "tab_bar.background": "#00000000",
    "terminal.background": "#00000000",
    "toolbar.background": "#00000000",
    "title_bar.inactive_background": "#00000000",
    "tab.inactive_background": "#00000000",
    "border": "#00000000",
    "status_bar.background": "#00000000",
    "title_bar.background": "#00000000",
    "border.variant": "#00000000",
    "scrollbar.track.background": "#00000000",
    "scrollbar.track.border": "#00000000",
    "scrollbar.thumb.background": "#00000000",
    "scrollbar.thumb.border": "#00000000",
    "elevated_surface.background": "#000000",
    "surface.background": "#00000090",
    "editor.gutter.background": "#00000000",
  },
  "ui_font_size": 18,
  "buffer_font_size": 17,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_weight": 500,
  "buffer_line_height": "comfortable",
  "current_line_highlight": "none",
  "selection_highlight": false,
  "formatter": "language_server",
  "git": {
    "inline_blame": {
      "enabled": false,
    },
    "git_gutter": "hide"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Mellow"
  },
  "scrollbar": {
    "show": "never",
    "selected_symbol": false,
    "git_diff": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
}
